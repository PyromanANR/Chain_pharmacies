@model Chain_pharmacies.Controllers.ProfileAdminController.OrderRequestViewModel

<h2>Create Order Request</h2>

<form asp-action="Create">
    <div class="form-group">
        <label for="product">Product</label>
        <select id="product" name="SelectedProductId" asp-items="@(new SelectList(Model.Products, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" id="quantity" name="Quantity" value="@Model.Quantity" min="1" />
    </div>
    <button type="submit">Create Order to Main Storage</button>
</form>