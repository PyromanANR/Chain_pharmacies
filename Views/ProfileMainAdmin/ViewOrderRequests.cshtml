@model List<OrderRequest>

<!DOCTYPE html>
<html>
<head>
    <title>Order Requests</title>
    <style>
        body {
            font-size: 1.2em;
        }

        table {
            border-spacing: 10px;
            border-collapse: separate;
        }

        th, td {
            padding: 10px;
        }
    </style>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Pharmacy</th>
                <th>Quantity</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Pharmacy.Location</td>
                    <td>@item.Quantity</td>
                    <td>@item.Status</td>
                    <td>
                        @if (item.Status != "Confirmed")
                        {
                            <form action="/ProfileMainAdmin/ConfirmRequest" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="submit" value="Confirm request" />
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

