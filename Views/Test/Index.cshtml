@model IEnumerable<Product>

<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Brand</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@Url.Content(item.ProductImages.FirstOrDefault()?.ImagePath)" alt="Product Image" 
                    style="width: 200px; height: 200px; object-fit: cover;" /></td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Brand.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Type.Name)</td>
            </tr>
        }
    </tbody>
</table>
