@model IEnumerable<Chain_pharmacies.Models.ProductInCart>

<h2>Your Shopping Cart</h2>

<table>
    <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th></th> 
    </tr>
    @foreach (var item in Model)
    {
        using (Html.BeginForm("UpdateQuantity", "Cart", new { id = item.ProductId }, FormMethod.Post))
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                <td>@Html.TextBoxFor(modelItem => item.Quantity, new { type = "number", min = "1" })</td>
                <td><input type="submit" value="Update" /></td>
            </tr>
        }
    }
</table>
